{
  "expo": {
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
        }
      ],[
        "expo-notifications",
        {
          "icon": "./assets/LogoIconApp.png",
          "color": "#ffffff"
        }
      ]
    ],
    "name": "purrfectplate",
    "slug": "purrfectplate",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/LogoIconApp.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/PurrfectPlateViewLogo.png",
      "resizeMode": "cover",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "We need your permission to record audio"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/LogoIconApp.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "2ef4b8d5-9825-48e7-b91b-eafadf758a7b"
      }
    }
  }
}
